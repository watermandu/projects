<mvc:View controllerName="zbappt010.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="BOM 관리">
        <content>
            <HBox>
                <VBox class="sapUiSmallMargin" width="25%">
                    <Label text="BOM 번호"/>
                      <ComboBox
                        id="idcomboBox"
                        items="{/ZBA_PPT010Set}"
                        width="100%">
                        <core:ListItem text="{Stlty}"/>
                    </ComboBox>
                    <Label text="자재번호"/>
                      <ComboBox
                        id="idcomboBox2"
                        items="{/ZBA_PPT010Set}"
                        width="100%">
                        <core:ListItem text="{Matnr}"/>
                    </ComboBox>
                    <Label text="공정번호"/>
                      <ComboBox
                        id="idcomboBox3"
                        items="{rtlist>/}"
                        width="100%">
                        <core:ListItem text="{rtlist>Rttid}"/>
                    </ComboBox>
                    <Button width="100%" text="Search" type="Emphasized" press="onSearch"/>
                </VBox>

            <VBox width="75%">
            <Table id="idPPT010Table"
                    mode="SingleSelectMaster"
                    noDataText="데이터가 없습니다."
                    sticky="HeaderToolbar,ColumnHeaders"
                    inset="false"
                    items="{
                        path:'/ZBA_PPT010Set'
                        }"
                    class="sapFDynamicPageAlignContent"
                    width="auto"
                    selectionChange="onSelectionChange"
                    >
                <headerToolbar>
                    <Toolbar>
                        <Title text="ZBA_PPT010 TABLE" level="H2"/>
                        <ToolbarSpacer />
                        <Button text="항공편 예약 상세" press="onDetail" />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="BOM 번호" />
                    </Column>
                    <Column>
                        <Text text="자재번호" />
                    </Column>
                    <Column>
                        <Text text="공정번호" />
                    </Column>
                    <Column>
                        <Text text="자재명" />
                    </Column>
                    <Column >
                        <Text text="자재유형" />
                    </Column>
                    <Column>
                        <Text text="원부자재 단가" />
                    </Column>
                    <Column>
                        <Text text="공정 비용" />
                    </Column>
                    <Column>
                        <Text text="제조 원가" />
                    </Column>
                    <Column>
                        <Text text="통화키" />
                    </Column>
                    <Column>
                        <Text text="삭제 플래그" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                    <cells>
                    <Text class="cssText" text="{Stlty}"/>
                    <Text text="{Matnr}"/>
                    <Text text="{Rttid}"/>
                    <Text text="{Matnm}"/>
                    <Text text="{Mtart}"/>
                    <Text text="{Rcost}"/>
                    <Text text="{Pcost}"/>
                    <Text text="{Ppnet}"/>
                    <Text text="{Waers}"/>
                    <Text text="{Delet}"/>
                    </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </VBox>
            </HBox>

        </content>
    </Page>
    
</mvc:View>
