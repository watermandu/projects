<c:FragmentDefinition 
    xmlns:c="sap.ui.core"
    xmlns="sap.m" xmlns:t="sap.ui.table"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">
    <Dialog id="idDialog" title="BOM 상세조회" contentHeight="100%" contentWidth="100%">
        <HBox>
            <VBox width="50%">

            <!-- 예약 현황 Table -->
                <t:Table
                    id="idStatusTable"
                    rows="{Dialog>/ZBA_PPT020Set/results}"
                    selectionMode="None"
                    
                    paste="onPaste"
                    ariaLabelledBy="title">
                    <t:columns>
                        <t:Column width="100%">
                            <Label text="STLNR" />
                            <t:template>
                                <Text text="{Dialog>/Stlnr}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="STLTY" />
                            <t:template>
                                <Text text="{Dialog>Stlty}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="MATNR" />
                            <t:template>
                                <Text text="{Dialog>Matnr}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="BOMTEXT" />
                            <t:template>
                                <Text text="{Dialog>Bomtest}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="BMENG" />
                            <t:template>
                                <Text text="{Dialog>Bmeng}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="MEINS" />
                            <t:template>
                                <Text text="{Dialog>Meins}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="PPNET" />
                            <t:template>
                                <Text text="{Dialog>Ppnet}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="WAERS" />
                            <t:template>
                                <Text text="{Dialog>Waers}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="DELET" />
                            <t:template>
                                <Text text="{Dialog>Delet}" wrapping="false" />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
                </VBox>

            <!-- 예약 현황 차트 -->
        
            </HBox>

            <!-- Dialog 닫기 버튼 -->
            <endButton> 
                <Button text="Close" press="onClose" />
            </endButton>
            
    </Dialog>
</c:FragmentDefinition>