<c:FragmentDefinition 
    xmlns:c="sap.ui.core"
    xmlns="sap.m" xmlns:t="sap.ui.table"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data">
    <Dialog id="idDialog" title="BOM Item" contentHeight="auto" contentWidth="auto" draggable="true" resizable="true" >
        <HBox>
            <VBox width="100%">

            <!-- 예약 현황 Table -->
                <t:Table
                    id="idStatusTable"
                    rows="{Dialog>/ZBA_PPT020Set/results}"
                    selectionMode="None"
                    
                    paste="onPaste"
                    ariaLabelledBy="title">
                    <t:columns>
                        <t:Column width="100%">
                            <Label text="BOM 상세번호" />
                            <t:template>
                                <Text text="{Dialog>Stlnr}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="BOM 번호" />
                            <t:template>
                                <Text text="{Dialog>Stlty}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="자재유형" />
                            <t:template>
                                <Text text="{Dialog>Mtart}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="상세설명" />
                            <t:template>
                                <Text text="{Dialog>Bomtext}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="자재수량" />
                            <t:template>
                                <Text text="{Dialog>Bmeng}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="단위" />
                            <t:template>
                                <Text text="{Dialog>Meins}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="비용" />
                            <t:template>
                                <Text text="{Dialog>Ppnet}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="통화키" />
                            <t:template>
                                <Text text="{Dialog>Waers}" wrapping="false" />
                            </t:template>
                        </t:Column>
                        <t:Column width="100%">
                            <Label text="삭제상태" />
                            <t:template>
                                <Text text="{Dialog>Delet}" wrapping="false" />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
                </VBox>

            <!-- 예약 현황 차트 -->
        
            </HBox>

            <!-- Dialog 닫기 버튼 -->
            <endButton> 
                <Button text="Close" press="onClose" />
            </endButton>
            
    </Dialog>
</c:FragmentDefinition>