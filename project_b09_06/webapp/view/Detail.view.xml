<mvc:View controllerName="projectb0906.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
  xmlns:core="sap.ui.core">
  <VBox class="sapUiSmallMargin">
    <f:SimpleForm editable="false" layout="ResponsiveGridLayout" title="Order Detail" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="2" columnsL="2" columnsM="2" singleContainerFullSize="false">
      <f:content >
      <core:Title text="111" />
        <Label text="OrderID" />
        <Text text="{OrderID}" />
        <Label text="CustomerID" />
        <Text text="{CustomerID}" />
        <Label text="EmployeeID" />
        <Text text="{EmployeeID} " />
          
        <core:Title text="222" />
        <Label text="OrderDate" />
        <Text text="{
                                  path: 'OrderDate',
                                  type: 'sap.ui.model.type.Date',
                                  formatOptions:{pattern:'yyyy-MM-dd'}
                                    }" />
        <Label text="RequiredDate" />
        <Text text="{
                                    path:'RequiredDate',
                                    formatter:'.formatter.fnDateString'
                                    }" />
        <Label text="ShippedDate" />
        <Text text="{
                                    path: 'ShippedDate',
                                    formatter: '.formatter.fnDateString'
                                    }" />
        <Label text="ShipVia" />
        <Text text="{ShipVia}" />
        <Label text="Freight" />
        <Text text="{Freight}" />
        <Label text="ShipName" />
        <Text text="{ShipName}" />
        <Label text="ShipAddress" />
        <Text text="{ShipAddress}" />
        <Label text="ShipCity" />
        <Text text="{ShipCity}" />
        <Label text="ShipRegion" />
        <Text text="{ShipRegion}" />
        <Label text="ShipPostalCode" />
        <Text text="{ShipPostalCode}" />
        <Label text="ShipCountry" />
        <Text text="{ShipCountry}" />

      </f:content>
      
    </f:SimpleForm>

  </VBox>

</mvc:View>
