<mvc:View controllerName="sap.btp.ux400solving.controller.Main"
  xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
  xmlns="sap.m"
  xmlns:t="sap.ui.table">
  <Page id="page" title="{i18n>title}">
    <VBox class="sapUiLargeMargin">
      <Text text="버튼을 클릭하면 아래 Input에 값이 랜덤으로 채워집니다"></Text>
      <Input  value="?" id="idBut" type='Number' change="onVlaueChange"></Input>
      <Button text="Random" press="onRandomPress"></Button>
    </VBox>
    <!--                -->
  
    <!-- 대문자는 class 소문자는 aggregation -->
    <t:Table rows="{list>/rows}" selectionMode="MultiToggle" visibleRowCount="7">
      <t:extension>
        <OverflowToolbar>
          <Title text="랜덤목록리스트"/>
          <Text text=""></Text>
        </OverflowToolbar>
      </t:extension>

      <t:columns>
        <t:Column>
          <Label text="value"></Label>
            <t:template>
              <Text text="{list>aa}"></Text>
            </t:template>
        </t:Column>
      </t:columns>
    </t:Table>
      <Button text="open Product" press ="onDialog"></Button>



  </Page>
</mvc:View>
